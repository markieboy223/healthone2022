{% extends 'bezoeker/index.html.twig' %}

{% block title %}HealthOne | Home{% endblock %}

{% block body %}
    <div class="container">
        <header>
            <div class="header-row lead">
                <h1 class="display-3">Health<span class="text-danger">One</span></h1>
            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Sportcenter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('categories') }}">sportapparaten</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">registreren</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">inloggen</a>
                    </li>
                </ul>
            </div>
        </nav>
        <figure>
            <img alt="banner" class="img-fluid banner-img" src={{ asset('img/healthone-wide.png') }}/>
        </figure>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('categories') }}">Categories</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ product.name }}></li>
            </ol>
        </nav>
        <div>
            <div class="card-body text-center">
                <a href="{{ path('product' , {'id':product.id}) }}">
                    <img alt="no picture" class="product-img img-responsive center-block" src="{{ asset(product.picture)}}"/>
                </a>
                <div class="card-title mb-3"><h1>{{ product.name }}</h1></div>
            </div>
            {% for review in product.reviews %}
                <div class="d-block p-1">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <div class="card-title mb-3">{{ review.name }}<a> {{ review.date|date('d-m-Y') }}</a></div>
                            <p>{{ review.description }}</p>
                            <p>- {{ review.stars }} stars</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>
        <footer>
            <i class="bi bi-linkedin float-right img-thumbnail"></i>
            <i class="bi bi-twitter float-right img-thumbnail"></i>
            <i class="bi bi-instagram float-right img-thumbnail"></i>

            <p class="clear pb-3 text-auted text-center">Afdeling software development Tinwerf 10, 2544 ED Den Haag</p>
        </footer>
    </div>

{% endblock %}
